<Window x:Class="G04_DBI_Trainings_Adventure.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G04_DBI_Trainings_Adventure"
        mc:Ignorable="d"
        Title="Eintrag oder Übung hinzufügen" Height="100" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Möchten Sie einen Eintrag oder eine Übung hinzufügen." Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="BtnEntry" Content="Eintrag" Grid.Column="0" Grid.Row="1" Click="BtnEntry_Click"/>
        <Button x:Name="BtnExercise" Content="Übung" Grid.Column="1" Grid.Row="1" Click="BtnExercise_Click"/>
    </Grid>
</Window>
