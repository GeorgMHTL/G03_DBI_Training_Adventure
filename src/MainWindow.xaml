<Window x:Class="G04_DBI_Trainings_Adventure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G04_DBI_Trainings_Adventure"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Orientation="Horizontal">

            <Button Content="Home" x:Name="Home" VerticalAlignment="Center" Click="Home_Click"  />

            <Button Content="Add" x:Name="Add" VerticalAlignment="Center" Click="Add_Click" />

        </StackPanel>

        <WrapPanel x:Name="ContentWrap" Background="Aqua" Grid.Row="1">
            
        </WrapPanel>

    </Grid>
</Window>
